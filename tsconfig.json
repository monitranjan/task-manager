{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "declaration": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2016"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "./**/*.d.ts",
    ]
}